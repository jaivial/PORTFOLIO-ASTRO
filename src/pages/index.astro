---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import About from "../components/About.jsx";
import Project from "../components/Project.jsx";
import { getData } from "../utils/projects";
import Timeline from "../components/Timeline.jsx";
import Contact from "../components/Contact.jsx";
import Footer from "../components/Footer.jsx";
import Blogcard from "../components/Blogcard.astro";
import NavBar from "../components/NavBar";
import LanguageProvider from "../components/LanguageProvider";
---

<Layout title="Jaime Digital Studio">
  <LanguageProvider client:load>
    <main class="relative">
      <NavBar client:only="react" />
      <Header transition:animate="fade" />
      <Hero />
      <About client:visible />
      <Project data={getData()} client:visible />
      <Timeline client:only="react" />
      <Contact client:visible />
      <Footer client:visible />
      <!-- <Education/> -->
    </main>
  </LanguageProvider>
</Layout>

<style>
  * {
    transition: all 2s ease-in-out;
  }
  .smooth-scroll {
    scroll-behavior: smooth;
  }
  .custom {
    height: 100%;
    width: 100%;
  }
  .animate__animated.animate__fadeInRightBig {
    --animate-duration: 0s;
  }
</style>

<script>
  // Initialize client-side language handling
  import { initClientLanguage } from "../utils/clientLanguageInit.js";
</script>
