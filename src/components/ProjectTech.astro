---
interface Props {
  project: {
    tech?: string[];
  };
}

const { project } = Astro.props;
---

<!-- Tecnologías -->
<div class="bg-white bg-opacity-5 p-4 lg:p-6 rounded-lg border border-primary border-opacity-10">
  <h3 class="text-primary font-semibold text-lg mb-4">Tecnologías utilizadas</h3>
  <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
    {project.tech && project.tech.map((tech) => <span class="bg-primary bg-opacity-15 text-primary px-3 py-2 rounded-lg text-xs lg:text-sm font-medium text-center hover:bg-opacity-25 transition-colors duration-200">{tech}</span>)}
  </div>
</div>
